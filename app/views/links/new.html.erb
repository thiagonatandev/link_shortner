<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-6">
	<div class="max-w-lg mx-auto">
		<h1 class="text-3xl font-semibold text-white mb-6">Novo Link</h1>
		<div class="backdrop-blur-md bg-white/10 border border-white/20 rounded-2xl shadow-2xl p-6">
			<%= form_with model: @link do |f| %>
				<div class="mb-4">
					<%= f.label :original_url, "URL original", class: "block text-white/80 mb-1" %>
					<%= f.text_field :original_url, class: "w-full px-3 py-2 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
				</div>
				<div class="flex justify-end">
					<%= f.submit "Encurtar", class: "px-4 py-2 rounded-lg bg-indigo-500/80 text-white hover:bg-indigo-500 transition" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
