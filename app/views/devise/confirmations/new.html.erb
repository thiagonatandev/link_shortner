<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-6 flex items-center justify-center">
  <div class="max-w-lg mx-auto w-full">
    <h1 class="text-3xl font-semibold text-white mb-6 text-center">Resend confirmation instructions</h1>

    <div class="backdrop-blur-md bg-white/10 border border-white/20 rounded-2xl shadow-2xl p-6">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="mb-6">
          <%= f.label :email, class: "block text-white/80 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "w-full px-3 py-2 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
        </div>

        <div class="actions">
          <%= f.submit "Resend confirmation instructions", class: "w-full px-4 py-2 rounded-lg bg-indigo-500/80 text-white hover:bg-indigo-500 transition cursor-pointer" %>
        </div>
      <% end %>
    </div>
    
    <div class="mt-6 text-center text-white/70">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
