<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-6 flex items-center justify-center">
  <div class="max-w-lg mx-auto w-full">
    <h1 class="text-3xl font-semibold text-white mb-6 text-center">Change your password</h1>

    <div class="backdrop-blur-md bg-white/10 border border-white/20 rounded-2xl shadow-2xl p-6">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
      
        <div class="mb-4">
          <%= f.label :password, "New password", class: "block text-white/80 mb-1" %>
          <% if @minimum_password_length %>
            <em class="text-sm text-white/50 block">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
        </div>

        <div class="mb-6">
          <%= f.label :password_confirmation, "Confirm new password", class: "block text-white/80 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: "w-full px-4 py-2 rounded-lg bg-indigo-500/80 text-white hover:bg-indigo-500 transition cursor-pointer" %>
        </div>
      <% end %>
    </div>
    
    <div class="mt-6 text-center text-white/70">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
