<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 p-6 flex items-center justify-center">
  <div class="max-w-lg mx-auto w-full">
    <h1 class="text-3xl font-semibold text-white mb-6 text-center">Edit <%= resource_name.to_s.humanize %></h1>
    
    <div class="backdrop-blur-md bg-white/10 border border-white/20 rounded-2xl shadow-2xl p-6">
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-white/80 mb-1" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm text-white/70 mb-4">Currently waiting for confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="mb-4">
          <%= f.label :password, class: "block text-white/80 mb-1" %>
          <i class="text-sm text-white/50">(leave blank if you don't want to change it)</i>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
          <% if @minimum_password_length %>
            <em class="text-sm text-white/50 mt-1 block"><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: "block text-white/80 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
        </div>

        <div class="mb-6">
          <%= f.label :current_password, class: "block text-white/80 mb-1" %>
          <i class="text-sm text-white/50">(we need your current password to confirm your changes)</i>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "w-full px-4 py-2 rounded-lg bg-indigo-500/80 text-white hover:bg-indigo-500 transition cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <div class="mt-6 flex flex-col sm:flex-row justify-between items-center text-center sm:text-left">
      <h3 class="text-lg font-semibold text-white/80 mb-4 sm:mb-0">Cancel my account</h3>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "px-4 py-2 rounded-lg bg-red-500/80 text-white hover:bg-red-500 transition" %>
    </div>
    
    <div class="mt-4 text-center">
      <%= link_to "Back", :back, class: "px-4 py-2 rounded-lg bg-white/20 text-white hover:bg-white/30 transition inline-block" %>
    </div>
  </div>
</div>
